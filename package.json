{
  "name": "react-native-cols",
  "description": "Grid Component for React Native.",
  "version": "1.0.2",
  "repository": "github:tobua/react-native-cols",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "app": "node create-app.js",
    "watch": "cpx 'src/**/*' app/node_modules/react-native-cols/src --watch",
    "test": "jest"
  },
  "type": "module",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@react-native-community/eslint-config": "^3.0.0",
    "babel-jest": "^27.0.6",
    "cpx": "^1.5.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "metro-react-native-babel-preset": "^0.66.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-native": "^0.65.0",
    "react-test-renderer": "^17.0.2",
    "recursive-copy": "^2.0.13",
    "rimraf": "^3.0.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "@react-native-community",
    "rules": {
      "semi": 0
    }
  },
  "jest": {
    "moduleNameMapper": {
      "react-native-cols": "<rootDir>/src"
    },
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "/app/"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
